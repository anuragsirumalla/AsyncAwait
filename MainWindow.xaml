<Window x:Class="AsyncAwait.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AsyncAwait"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
        <DockPanel>

        <Button Name="buttonAsync" Height="50" Width="400" Margin="20" FontSize="30" Content="Data in Sychronous Format" 
                DockPanel.Dock="Top" Click="ButtonSync_Click"/>

        <Button Name="buttonsync" Height="50" Width="400" Margin="20" FontSize="30" Content="Data in Asynchronous Format" 
                DockPanel.Dock="Bottom"  Click="ButtonAsync_Click"/>

        <TextBox Name="ElapsedTime" DockPanel.Dock="Top"  Margin="10"
                 FontSize="11"
                 AcceptsReturn="True" />
        <TextBox Name="NumberOfWords" DockPanel.Dock="Top"  Margin="10"
                 FontSize="10"
                 AcceptsReturn="True" />

    </DockPanel>
</Window>
